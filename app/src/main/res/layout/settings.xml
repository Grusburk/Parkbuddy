<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Glöm min stad"
        android:background="@drawable/ripple"
        android:layout_gravity="center_horizontal"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_forget" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/filter"
        android:textAlignment="center"
        android:textSize="18sp"/>
    <CheckBox
        android:checked="true"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Parkering för personbil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car_checkbox"/>
    <CheckBox
        android:checked="true"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Parkering för rörelsehindrad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rorelse_checkbox"/>
    <CheckBox
        android:checked="true"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Parkering för lastbil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastbil_checkbox"/>
    <CheckBox
        android:checked="true"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Parkering för MC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mc_checkbox"/>
    <CheckBox
        android:checked="true"

        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Parkering som kostar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_checkbox"/>
</LinearLayout>
